      <li id="charge_amount_input" class="string required">
        <label for="charge_amount">Amount<abbr title="required">*</abbr></label>
        <input type="text" size="50" name="charge[amount]" id="charge_amount">
      </li>
      <li id="charge_memo_input" class="text required">
        <label for="charge_memo">Memo<abbr title="required">*</abbr></label>
